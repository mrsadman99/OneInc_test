        @Html.TextBoxFor(m => m.SurnameOwner, htmlAttributes:
            new { @readonly = "true" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
