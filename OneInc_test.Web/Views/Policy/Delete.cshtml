@{
    ViewBag.Title = "Delete policy";
}
@model OneInc_test.Web.Models.PolicyDtoCreated
@Scripts.Render("~/bundles/jqueryval")

<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
